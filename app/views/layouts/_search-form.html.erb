<div class="container">
  <div class="row">
    <div class="mx-auto mt-1 search-box">
      <% if user_signed_in? %>
        <%= form_with url: search_path, method: :get, local: true do |f| %>
          <%= f.text_field :content, class: "content-box", placeholder: "Search" %>
          <%= f.submit "\uf007", name: "user", class: "btn btn-primary btn-sm search-button-user" %>
          <%= f.submit "\uF02D", name: "book", class: "btn btn-success btn-sm search-button-book" %>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>